---
const { title, desc } = Astro.props;
const parsed = [];
if (desc) {
  for (const [key, value] of Object.entries(desc)) {
    parsed.push(` ${value}`); // "a 5", "b 7", "c 9"
  }
}
---

<div
  class="py-2 px-4 bg-purple-500 text-white font-semibold hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-purple-400 focus:ring-opacity-75"
>
  {title}
  {desc && parsed.map((itm) => <span class="mx-5">{itm}</span>)}
</div>
